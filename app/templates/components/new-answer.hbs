{{#if addNewAnswer}}
  <h2>Answer</h2>
    <div>
      <form>
        <div class="form-group">
          <label for="user">Name</label>
          {{input value=user id="user"}}
        </div>

        <div class="form-group">
          <label for="content">Your Answer</label>
          {{input value=content id="content"}}
        </div>

        <button {{action 'answerSave1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'answerFormShow'}}>Update answer</button>
{{/if}}
