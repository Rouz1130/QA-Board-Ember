{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="text">Your Question:</label>
        {{input value=text id="text"}}
      </div>

      <div class="form-group">
        <label for="author">Your Name:</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="notes">Any Notes:</label>
        {{input value=notes id="notes"}}
      </div>

      <button {{action 'questionSave1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
